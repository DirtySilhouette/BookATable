@model BookATable.ViewModels.Users.UsersListViewModel

<h2>Users</h2>

@Html.ActionLink("Create new", "Create", "Users")

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Phone</th>
            <th>IsAdmin</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Password</td>
                <td>@user.Phone</td>
                <td>@user.IsAdmin</td>
                <td>@Html.ActionLink("Edit", "Edit", "Users", new { id = user.ID }, new { @class = "btn btn-success glypchicon glyphicon-pencil" })</td>
                <td>@Html.ActionLink("Delete", "Delete", "Users", new { id = user.ID }, new { @class = "btn btn-danger" })</td>

            </tr>
        }
    </tbody>
</table>

