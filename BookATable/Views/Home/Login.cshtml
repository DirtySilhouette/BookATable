@model BookATable.ViewModels.Login.LoginViewModel
@{ 
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    <style>
        .btn {
            position: relative;
            background-color: #eed263;
            border: none;
            font-size: 28px;
            color: #F4511E;
            padding: 8px;
            margin-top: 8px;
            width: 120px;
            text-align: center;
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.4s;
            text-decoration: none;
            overflow: hidden;
            cursor: pointer;
        }

            .btn:after {
            content: "";
            background: #4CAF50;
            display: block;
            position: absolute;
            padding-top: 300%;
            padding-left: 350%;
            margin-left: -20px !important;
            margin-top: -120%;
            opacity: 0;
            transition: all 0.8s
            }

          .btn:active:after {
            padding: 0;
            margin: 0;
            opacity: 1;
            transition: 0s
            }
    </style>

    <div style="color:white; border-radius:15%; width:400px; height:350px; padding:20px; padding-left:50px; padding-top:50px; margin:auto; margin-top:10%; margin-left:33%; background-color:#F4511E;">

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size:20px;" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", @style = "font-size:16px; color:white;" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size:20px;" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @style = "font-size:16px; color:white;" })
                @Html.ValidationMessage("failedLogin", new { @style = "font-size:16px;" })
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Login" class="btn login" />
            </div>
        </div>

    </div>

    </div>
}