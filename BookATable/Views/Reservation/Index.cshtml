@model BookATable.ViewModels.Reservations.ReservationsListViewModel
@{
    ViewBag.Title = "Reservations";
}

<head>
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">

    <style>
        .table th {
            text-align: center;
            color: white;
            font-family: Montserrat, sans-serif;
        }

        .table td {
            text-align: center;
            color: black;
        }

        body {
            background-color: sandybrown;
        }
    </style>
</head>

<h2 style="text-align:center;">Reservations</h2>

@Html.ActionLink("Create new", "Create", "Reservation", new { @class = "btn btn-info", @style = "background-color: #F4511E; border: none" })

<hr />

<table class="table">
    <thead style="background-color: #F4511E;">
        <tr>
            <th>User</th>
            <th>Restaurant</th>
            <th>Reservation Time</th>
            <th>People Count</th>
            <th>Comment</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model.Reservations)
        {
            <tr>
                <td>@reservation.User.Name</td>
                <td>@reservation.Restaurant.Name</td>
                <td>@reservation.ReservationTime</td>
                <td>@reservation.PeopleCount</td>
                <td>@reservation.Comment</td>
                

                @{
                    if (BookATable.Filters.AdminFilter.IsAdmin())
                    {
                        <td>@Html.ActionLink("Edit", "Edit", "Reservation", new { id = reservation.ID }, new { @class = "btn btn-success glypchicon glyphicon-pencil" })</td>
                        <td>@Html.ActionLink("Delete", "Delete", "Reservation", new { id = reservation.ID }, new { @class = "btn btn-danger" })</td>
                    }
                }
            </tr>
        }
    </tbody>
</table>